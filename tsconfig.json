{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "node",
		"declaration": true,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"removeComments": false,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "ES2021",
		"sourceMap": true,
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"incremental": true
	},
	"include": ["src/**/*", ".eslintrc.cjs"],
	"exclude": ["node_modules"]
}
